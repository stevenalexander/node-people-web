extends layout

block content
  div(class='row')
    table(class='table')
      thead
        tr
          th Name
          th DOB
          th Status
          th
      tbody
        each person in people
          tr
            td= person.name
            td= person.dob
            td= person.status
            td
              form(action=`/delete/${person.id}`, method='post')
                button.btn.btn-link(type='submit') Delete

  div(class='row')
    form(action=`/new`, method='post')
      div.form-group
        label(for='name') Name
        input#name.form-control(name='name')
      div.form-group
        label(for='dob') Date of birth
        input#name.form-control(name='dob' placeholder='2000-01-31')
      div.form-group
        button.btn.btn-default(type='submit') Add
