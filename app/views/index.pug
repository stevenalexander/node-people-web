extends layout

block content
  h1= title
  div
    ul(class='people')
      each person in people
        li(class='person', data-name= person.name)
          span= person.name
          | &nbsp;
          a(class='delete', href='/delete/' + person.id) x

  div
    form(action='/add', method='post')
      input(name='name')
      input(name='add', type='submit', value='add')
